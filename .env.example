# Web
NEXT_PUBLIC_API_URL=http://localhost:3001

# API
API_PORT=3001
CORS_ORIGIN=http://localhost:3000
REDIS_URL=redis://redis:6379
QUEUE_NAME=sitegen
JOB_ATTEMPTS=1
MAX_PROMPT_LENGTH=8000
JWT_SECRET=change-me
JWT_TTL=7d

# Worker
WORKER_CONCURRENCY=2
ROBOSITE_KEEP_WORKDIR=false

# OpenAI
OPENAI_API_KEY=sk-your-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_API_URL=https://api.openai.com/v1/chat/completions
OPENAI_MAX_TOKENS=20000
OPENAI_TIMEOUT_MS=0
OPENAI_LOG_RESPONSE=true
OPENAI_REASONING_EFFORT=
OPENAI_RESPONSE_FORMAT=
OPENAI_ENABLE_JSON_REPAIR=true
OPENAI_JSON_REPAIR_MODEL=
OPENAI_JSON_REPAIR_RESPONSE_FORMAT=
OPENAI_JSON_REPAIR_MAX_CHARS=12000
OPENAI_FALLBACK_MODEL=gpt-4o
OPENAI_ALLOW_FALLBACK=true

# S3 (primary)
S3_BUCKET=your-bucket-name
S3_PUBLIC_BASE_URL=https://cdn.example.com/your-bucket-name
S3_ENDPOINT=http://127.0.0.1:9000

# AWS credentials
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_SESSION_TOKEN=

# Alternate/legacy variables (supported)
AWS_URL_PASSPORTS=https://cdn.example.com/your-bucket-name
AWS_BUCKET_PASSPORTS=your-bucket-name
AWS_ENDPOINT_CDN=https://cdn.example.com
AWS_ENDPOINT=http://127.0.0.1:9000

# Optional
S3_OBJECT_ACL=

# Postgres (reserved for metadata storage)
